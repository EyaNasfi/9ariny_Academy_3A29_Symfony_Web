    margin-bottom: 20px;
  }
  
  .form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }
  
  .form-group input[type="text"],
  .form-group input[type="checkbox"],
  .form-group button {
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
    width: 50%;
    margin-top: 5px;
  }
  
  /* Styles CSS pour les boutons de catégorie */
  .form-group button {
    margin-right: 0px;
  }
  
  /* Styles CSS pour les boutons de soumission */
  .btn-primary {
    background-color: dodgerblue;
    color: #fff;
    border: none;
    padding: 10px 20px;
